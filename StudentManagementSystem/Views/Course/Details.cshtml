@model StudentManagementSystem.ViewModels.CourseDetailsViewModel
@{
    ViewData["Title"] = "Course Details";

    int enrolledCount = Model.Course.Enrollments?.Count ?? 0;
    int availableSeats = Math.Max(0, Model.Course.MaxStudents - enrolledCount);
    double fillRate = Model.Course.MaxStudents > 0 ? (double)enrolledCount / Model.Course.MaxStudents * 100 : 0;
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h2><i class="fas fa-book"></i> @Model.Course.CourseCode: @Model.Course.Title</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-header bg-info text-white">
                                <h4>Course Information</h4>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-3">Course Code:</dt>
                                    <dd class="col-sm-9">@Model.Course.CourseCode</dd>

                                    <dt class="col-sm-3">Title:</dt>
                                    <dd class="col-sm-9">@Model.Course.Title</dd>

                                    <dt class="col-sm-3">Credits:</dt>
                                    <dd class="col-sm-9">@Model.Course.Credits</dd>

                                    <dt class="col-sm-3">Semester:</dt>
                                    <dd class="col-sm-9">@Model.Course.Semester</dd>

                                    <dt class="col-sm-3">Description:</dt>
                                    <dd class="col-sm-9">
                                        @if (string.IsNullOrEmpty(Model.Course.Description))
                                        {
                                            <span class="text-muted">No description available</span>
                                        }
                                        else
                                        {
                                            @Model.Course.Description
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-header bg-success text-white">
                                <h4>Enrollment Status</h4>
                            </div>
                            <div class="card-body">
                                <h5>Capacity</h5>
                                <div class="progress mb-3" style="height: 25px;">
                                    <div class="progress-bar bg-success" role="progressbar"
                                         style="width: @fillRate%;"
                                         aria-valuenow="@enrolledCount"
                                         aria-valuemin="0"
                                         aria-valuemax="@Model.Course.MaxStudents">
                                        @enrolledCount / @Model.Course.MaxStudents (@Math.Round(fillRate, 1)%)
                                    </div>
                                </div>

                                <div class="alert @(availableSeats > 0 ? "alert-success" : "alert-danger")">
                                    @if (availableSeats > 0)
                                    {
                                        <i class="fas fa-check-circle"></i> <strong>@availableSeats seat available</strong>
                                        for enrollment.
                                                            }
                                    else
                                    {
                                        <i class="fas fa-exclamation-circle"></i> <strong>Course is full.</strong>
                                        No seats available.
                                                            }
                                </div>

                                @if (User.Identity.IsAuthenticated && User.IsInRole("Student") && availableSeats > 0)
                                {
                                    <a asp-controller="Student" asp-action="CourseRegistration" class="btn btn-primary btn-block">
                                        <i class="fas fa-sign-in-alt"></i> Register for this Course
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.IsAdminOrFaculty && Model.EnrolledStudents != null && Model.EnrolledStudents.Any())
                {
                    <div class="card">
                        <div class="card-header bg-secondary text-white">
                            <h4><i class="fas fa-users"></i> Enrolled Students</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover" id="enrolledStudentsTable">
                                    <thead>
                                        <tr>
                                            <th>Student Number</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var student in Model.EnrolledStudents)
                                        {
                                            var enrollment = student.Enrollments.FirstOrDefault(e => e.CourseId == Model.Course.Id);
                                            <tr>
                                                <td>@student.StudentNumber</td>
                                                <td>@student.User.FirstName @student.User.LastName</td>
                                                <td>@student.User.Email</td>
                                                <td>
                                                    @if (enrollment != null)
                                                    {
                                                        if (enrollment.Status == "Completed")
                                                        {
                                                            <span class="badge badge-success">@enrollment.Status</span>
                                                        }
                                                        else if (enrollment.Status == "Enrolled")
                                                        {
                                                            <span class="badge badge-primary">@enrollment.Status</span>
                                                        }
                                                        else if (enrollment.Status == "Dropped")
                                                        {
                                                            <span class="badge badge-danger">@enrollment.Status</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-secondary">@enrollment.Status</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-warning">Unknown</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Courses
                </a>

                @if (Model.IsAdminOrFaculty)
                {
                    <a asp-action="ManageStudents" asp-route-id="@Model.Course.Id" class="btn btn-primary">
                        <i class="fas fa-users-cog"></i> Manage Students
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @if (Model.IsAdminOrFaculty && Model.EnrolledStudents != null && Model.EnrolledStudents.Any())
    {
        <script>
            $(document).ready(function() {
                $('#enrolledStudentsTable').DataTable({
                    "pageLength": 10,
                    "order": [[ 1, "asc" ]]
                });
            });
        </script>
    }
}