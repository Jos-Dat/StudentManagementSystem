@model StudentManagementSystem.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h1 class="text-danger">Error</h1>
    </div>
    <div class="card-body">
        <h2 class="text-danger">An error occurred while processing your request.</h2>

        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <div class="alert alert-warning">
            <h4 class="alert-heading">What happened?</h4>
            <p>
                Something went wrong with your request. This could be due to a temporary issue or a problem with the information you provided.
            </p>
            <hr>
            <p class="mb-0">
                You can try again or contact the system administrator if the problem persists.
            </p>
        </div>
    </div>
    <div class="card-footer">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-home"></i> Return to Home
        </a>
    </div>
</div>